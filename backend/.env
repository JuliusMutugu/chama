# Database
DATABASE_URL=sqlite:///./chama.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost/chama

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Blockchain
WEB3_PROVIDER_URL=http://127.0.0.1:7545
# After starting Ganache, copy any of the private keys from the accounts list
# Remember to remove the '0x' prefix when adding it here
DEPLOYER_PRIVATE_KEY=REPLACE_WITH_GANACHE_PRIVATE_KEY
DEPLOYER_PRIVATE_KEY=your-private-key-here

# Development
DEBUG=True
